    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.foodnow.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.foodnow.FromServer1"
            android:label="@string/title_activity_from_server1" >
        </activity>
        <activity
            android:name="com.example.foodnow.UserInput"
            android:label="@string/title_activity_user_input" >
        </activity>
        <activity
            android:name="com.example.foodnow.CurrentConnected"
            android:label="@string/title_activity_current_connected" >
        </activity>
    </application>

</manifest>